<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:duplicateParentState="false"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/operation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_mono"
                android:textAlignment="viewEnd"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_mono"
                android:textAlignment="viewEnd"
                android:textSize="24sp" />

        </LinearLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dip"
            android:background="@color/colorGray" />

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <androidx.gridlayout.widget.GridLayout
                android:id="@+id/btnCientific"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:showAsAction="ifRoom">

                <Button
                    android:id="@+id/fraction"
                    android:layout_width="110dip"
                    android:layout_height="45dip"
                    android:layout_margin="1dip"
                    android:background="@drawable/button_blue_black"
                    android:fontFamily="@font/roboto_mono"
                    android:onClick="signFraction"
                    android:text="1/x"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp"
                    app:layout_column="0"
                    app:layout_row="0" />

                <Button
                    android:id="@+id/parenLeft"
                    android:layout_width="110dip"
                    android:layout_height="45dip"
                    android:layout_margin="1dip"
                    android:background="@drawable/button_blue_black"
                    android:fontFamily="@font/roboto_mono"
                    android:onClick="signParenLeft"
                    android:text="("
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp"
                    app:layout_column="1"
                    app:layout_row="0" />

                <Button
                    android:id="@+id/parenRight"
                    android:layout_width="110dip"
                    android:layout_height="45dip"
                    android:layout_margin="1dip"
                    android:background="@drawable/button_blue_black"
                    android:fontFamily="@font/roboto_mono"
                    android:onClick="signParenRight"
                    android:text=")"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp"
                    app:layout_column="2"
                    app:layout_row="0" />

                <Button
                    android:id="@+id/factorial"
                    android:layout_width="110dip"
                    android:layout_height="45dip"
                    android:layout_margin="1dip"
                    android:background="@drawable/button_blue_black"
                    android:fontFamily="@font/roboto_mono"
                    android:onClick="signFactorial"
                    android:text="!"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp"
                    app:layout_column="0"
                    app:layout_row="1" />

                <Button
                    android:id="@+id/raiz"
                    android:layout_width="110dip"
                    android:layout_height="45dip"
                    android:layout_margin="1dip"
                    android:background="@drawable/button_blue_black"
                    android:fontFamily="@font/roboto_mono"
                    android:onClick="signRaiz"
                    android:text="√"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp"
                    app:layout_column="1"
                    app:layout_row="1" />

                <Button
                    android:id="@+id/pi"
                    android:layout_width="110dip"
                    android:layout_height="45dip"
                    android:layout_margin="1dip"
                    android:background="@drawable/button_blue_black"
                    android:fontFamily="@font/roboto_mono"
                    android:onClick="signPi"
                    android:text="π"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp"
                    app:layout_column="2"
                    app:layout_row="1" />

                <Button
                    android:id="@+id/ln"
                    android:layout_width="110dip"
                    android:layout_height="45dip"
                    android:layout_margin="1dip"
                    android:background="@drawable/button_blue_black"
                    android:fontFamily="@font/roboto_mono"
                    android:onClick="signLn"
                    android:text="ln"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp"
                    app:layout_column="0"
                    app:layout_row="2" />

                <Button
                    android:id="@+id/log"
                    android:layout_width="110dip"
                    android:layout_height="45dip"
                    android:layout_margin="1dip"
                    android:background="@drawable/button_blue_black"
                    android:fontFamily="@font/roboto_mono"
                    android:onClick="signLog"
                    android:text="log"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp"
                    app:layout_column="1"
                    app:layout_row="2" />

                <Button
                    android:id="@+id/e"
                    android:layout_width="110dip"
                    android:layout_height="45dip"
                    android:layout_margin="1dip"
                    android:background="@drawable/button_blue_black"
                    android:fontFamily="@font/roboto_mono"
                    android:onClick="signE"
                    android:text="e"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp"
                    app:layout_column="2"
                    app:layout_row="2" />

                <Button
                    android:id="@+id/sin"
                    android:layout_width="110dip"
                    android:layout_height="45dip"
                    android:layout_margin="1dip"
                    android:background="@drawable/button_blue_black"
                    android:fontFamily="@font/roboto_mono"
                    android:onClick="signSin"
                    android:text="sin"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp"
                    app:layout_column="0"
                    app:layout_row="3" />

                <Button
                    android:id="@+id/cos"
                    android:layout_width="110dip"
                    android:layout_height="45dip"
                    android:layout_margin="1dip"
                    android:background="@drawable/button_blue_black"
                    android:fontFamily="@font/roboto_mono"
                    android:onClick="signCos"
                    android:text="cos"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp"
                    app:layout_column="1"
                    app:layout_row="3" />

                <Button
                    android:id="@+id/tan"
                    android:layout_width="110dip"
                    android:layout_height="45dip"
                    android:layout_margin="1dip"
                    android:background="@drawable/button_blue_black"
                    android:fontFamily="@font/roboto_mono"
                    android:onClick="signTan"
                    android:text="tan"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp"
                    app:layout_column="2"
                    app:layout_row="3" />

                <Button
                    android:id="@+id/acos"
                    android:layout_width="110dip"
                    android:layout_height="45dip"
                    android:layout_margin="1dip"
                    android:background="@drawable/button_blue_black"
                    android:fontFamily="@font/roboto_mono"
                    android:onClick="signACos"
                    android:text="acos"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp"
                    app:layout_column="1"
                    app:layout_row="4" />

                <Button
                    android:id="@+id/asin"
                    android:layout_width="110dip"
                    android:layout_height="45dip"
                    android:layout_margin="1dip"
                    android:background="@drawable/button_blue_black"
                    android:fontFamily="@font/roboto_mono"
                    android:onClick="signASin"
                    android:text="asin"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp"
                    app:layout_column="0"
                    app:layout_row="4" />

                <Button
                    android:id="@+id/atan"
                    android:layout_width="110dip"
                    android:layout_height="45dip"
                    android:layout_margin="1dip"
                    android:background="@drawable/button_blue_black"
                    android:fontFamily="@font/roboto_mono"
                    android:onClick="signATan"
                    android:text="atan"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp"
                    app:layout_column="2"
                    app:layout_row="4" />

                <Button
                    android:id="@+id/c"
                    android:layout_width="110dip"
                    android:layout_height="45dip"
                    android:layout_margin="1dip"
                    android:width="50dip"
                    android:background="@drawable/button_grey"
                    android:maxHeight="100dip"
                    android:minWidth="100dip"
                    android:onClick="dropAll"
                    android:text="C"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_column="3"
                    app:layout_row="0" />

                <Button
                    android:id="@+id/seven"
                    android:layout_width="110dip"
                    android:layout_height="45dip"
                    android:layout_margin="1dip"
                    android:width="50dip"
                    android:background="@drawable/button_white"
                    android:minWidth="100dp"
                    android:onClick="num7"
                    android:text="7"
                    android:textSize="24sp"
                    app:layout_column="3"
                    app:layout_row="1" />

                <Button
                    android:id="@+id/four"
                    android:layout_width="110dip"
                    android:layout_height="45dip"
                    android:layout_margin="1dip"
                    android:width="50dip"
                    android:background="@drawable/button_white"
                    android:minWidth="100dp"
                    android:onClick="num4"
                    android:text="4"
                    android:textSize="24sp"
                    app:layout_column="3"
                    app:layout_row="2" />

                <Button
                    android:id="@+id/one"
                    android:layout_width="110dip"
                    android:layout_height="45dip"
                    android:layout_margin="1dip"
                    android:width="50dip"
                    android:background="@drawable/button_white"
                    android:minWidth="100dp"
                    android:onClick="num1"
                    android:text="1"
                    android:textSize="24sp"
                    app:layout_column="3"
                    app:layout_row="3" />

                <Button
                    android:id="@+id/porcent"
                    android:layout_width="110dip"
                    android:layout_height="45dip"
                    android:layout_margin="1dip"
                    android:width="50dip"
                    android:background="@drawable/button_white"
                    android:minWidth="100dp"
                    android:onClick="signPorcent"
                    android:text="%"
                    android:textSize="24sp"
                    app:layout_column="3"
                    app:layout_row="4" />

                <Button
                    android:id="@+id/divide"
                    android:layout_width="110dip"
                    android:layout_height="45dip"
                    android:layout_margin="1dip"
                    android:width="50dip"
                    android:background="@drawable/button_blue"
                    android:minWidth="100dp"
                    android:onClick="signDivide"
                    android:text="/"
                    android:textColor="@color/colorWhite"
                    android:textSize="24sp"
                    app:layout_column="4"
                    app:layout_row="0" />

                <Button
                    android:id="@+id/eight"
                    android:layout_width="110dip"
                    android:layout_height="45dip"
                    android:layout_margin="1dip"
                    android:width="50dip"
                    android:background="@drawable/button_white"
                    android:minWidth="100dp"
                    android:onClick="num8"
                    android:text="8"
                    android:textSize="24sp"
                    app:layout_column="4"
                    app:layout_row="1" />

                <Button
                    android:id="@+id/five"
                    android:layout_width="110dip"
                    android:layout_height="45dip"
                    android:layout_margin="1dip"
                    android:width="50dip"
                    android:background="@drawable/button_white"
                    android:minWidth="100dp"
                    android:onClick="num5"
                    android:text="5"
                    android:textSize="24sp"
                    app:layout_column="4"
                    app:layout_row="2" />

                <Button
                    android:id="@+id/zero"
                    android:layout_width="110dip"
                    android:layout_height="45dip"
                    android:layout_margin="1dip"
                    android:width="50dip"
                    android:background="@drawable/button_white"
                    android:minWidth="100dp"
                    android:onClick="num0"
                    android:text="0"
                    android:textSize="24sp"
                    app:layout_column="4"
                    app:layout_row="4" />

                <Button
                    android:id="@+id/two"
                    android:layout_width="110dip"
                    android:layout_height="45dip"
                    android:layout_margin="1dip"
                    android:width="50dip"
                    android:background="@drawable/button_white"
                    android:minWidth="100dp"
                    android:onClick="num2"
                    android:text="2"
                    android:textSize="24sp"
                    app:layout_column="4"
                    app:layout_row="3" />

                <Button
                    android:id="@+id/multiply"
                    android:layout_width="110dip"
                    android:layout_height="45dip"
                    android:layout_margin="1dip"
                    android:width="50dip"
                    android:background="@drawable/button_blue"
                    android:minWidth="100dp"
                    android:onClick="signMulti"
                    android:text="*"
                    android:textColor="@color/colorWhite"
                    android:textSize="24sp"
                    app:layout_column="5"
                    app:layout_row="0" />

                <Button
                    android:id="@+id/nine"
                    android:layout_width="110dip"
                    android:layout_height="45dip"
                    android:layout_margin="1dip"
                    android:width="50dip"
                    android:background="@drawable/button_white"
                    android:minWidth="100dp"
                    android:onClick="num9"
                    android:text="9"
                    android:textSize="24sp"
                    app:layout_column="5"
                    app:layout_row="1" />

                <Button
                    android:id="@+id/six"
                    android:layout_width="110dip"
                    android:layout_height="45dip"
                    android:layout_margin="1dip"
                    android:width="50dip"
                    android:background="@drawable/button_white"
                    android:minWidth="100dp"
                    android:onClick="num6"
                    android:text="6"
                    android:textSize="24sp"
                    app:layout_column="5"
                    app:layout_row="2" />

                <Button
                    android:id="@+id/three"
                    android:layout_width="110dip"
                    android:layout_height="45dip"
                    android:layout_margin="1dip"
                    android:width="50dip"
                    android:background="@drawable/button_white"
                    android:minWidth="100dp"
                    android:onClick="num3"
                    android:text="3"
                    android:textSize="24sp"
                    app:layout_column="5"
                    app:layout_row="3" />

                <Button
                    android:id="@+id/btnPoint"
                    android:layout_width="110dip"
                    android:layout_height="45dip"
                    android:layout_margin="1dip"
                    android:width="50dip"
                    android:background="@drawable/button_white"
                    android:minWidth="100dp"
                    android:onClick="signPoint"
                    android:text="."
                    android:textSize="24sp"
                    app:layout_column="5"
                    app:layout_row="4" />

            </androidx.gridlayout.widget.GridLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/drop"
                    android:layout_width="110dip"
                    android:layout_height="47dip"
                    android:layout_margin="1dip"
                    android:background="@drawable/button_grey"
                    android:drawableBottom="@drawable/ic_backspace"
                    android:maxHeight="100dip"
                    android:minWidth="100dip"
                    android:onClick="dropCharacter"
                    android:paddingBottom="5dip"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/subtraction"
                    android:layout_width="110dip"
                    android:layout_height="47dip"
                    android:layout_margin="1dip"
                    android:background="@drawable/button_blue"
                    android:minWidth="100dp"
                    android:onClick="signSubtraction"
                    android:text="-"
                    android:textColor="@color/colorWhite" />

                <Button
                    android:id="@+id/sum"
                    android:layout_width="110dip"
                    android:layout_height="47dip"
                    android:layout_margin="1dip"
                    android:background="@drawable/button_blue"
                    android:minWidth="100dp"
                    android:onClick="signSum"
                    android:text="+"
                    android:textColor="@color/colorWhite" />

                <Button
                    android:id="@+id/equal"
                    android:layout_width="110dip"
                    android:layout_height="95dp"
                    android:layout_margin="1dip"
                    android:background="@drawable/button_purple"
                    android:minWidth="95dp"
                    android:onClick="signEqual"
                    android:text="="
                    android:textColor="@color/colorWhite" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>