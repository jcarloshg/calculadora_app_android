<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/btnCientific"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingHorizontal="1dp"
        android:paddingVertical="1dp"
        app:showAsAction="ifRoom"
        tools:layout_editor_absoluteX="-300dp"
        tools:layout_editor_absoluteY="35dp">

        <Button
            android:id="@+id/fraction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1/x"
            app:layout_column="0"
            app:layout_row="0" />

        <Button
            android:id="@+id/parenLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="("
            app:layout_column="1"
            app:layout_row="0" />

        <Button
            android:id="@+id/parenRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=")"
            app:layout_column="2"
            app:layout_row="0" />

        <Button
            android:id="@+id/factorial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sin"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/raiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cos"
            app:layout_column="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/pi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tag"
            app:layout_column="2"
            app:layout_row="1" />

        <Button
            android:id="@+id/ln"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x⁻¹"
            app:layout_column="0"
            app:layout_row="2" />

        <Button
            android:id="@+id/log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x!"
            app:layout_column="1"
            app:layout_row="2" />

        <Button
            android:id="@+id/e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="√"
            app:layout_column="2"
            app:layout_row="2" />

        <Button
            android:id="@+id/sin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x²"
            app:layout_column="0"
            app:layout_row="3" />

        <Button
            android:id="@+id/cos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button"
            app:layout_column="1"
            app:layout_row="3" />

        <Button
            android:id="@+id/tan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button"
            app:layout_column="2"
            app:layout_row="3" />

        <Button
            android:id="@+id/acos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button"
            app:layout_column="1"
            app:layout_row="4" />

        <Button
            android:id="@+id/asin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button"
            app:layout_column="0"
            app:layout_row="4" />

        <Button
            android:id="@+id/atan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button"
            app:layout_column="2"
            app:layout_row="4" />

    </androidx.gridlayout.widget.GridLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:duplicateParentState="false"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/operation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_mono"
                android:textAlignment="viewEnd"
                android:textSize="42sp" />

            <TextView
                android:id="@+id/result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_mono"
                android:textAlignment="viewEnd"
                android:textSize="30sp" />
        </LinearLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_margin="10dip"
            android:background="@color/colorGray" />

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.gridlayout.widget.GridLayout
                android:id="@+id/btnNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constrainedHeight="false">

                <Button
                    android:id="@+id/c"
                    android:layout_width="95dip"
                    android:layout_height="85dip"
                    android:layout_margin="4dip"
                    android:width="50dip"
                    android:background="@drawable/button_grey"
                    android:fontFamily="@font/roboto_mono"
                    android:maxHeight="100dip"
                    android:minWidth="100dip"
                    android:onClick="dropAll"
                    android:text="C"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_column="0"
                    app:layout_row="0" />

                <Button
                    android:id="@+id/seven"
                    android:layout_width="95dp"
                    android:layout_height="85dp"
                    android:layout_margin="4dip"
                    android:width="50dip"
                    android:background="@drawable/button_white"
                    android:fontFamily="@font/roboto_mono"
                    android:minWidth="100dp"
                    android:onClick="num7"
                    android:text="7"
                    android:textSize="24sp"
                    app:layout_column="0"
                    app:layout_row="1" />

                <Button
                    android:id="@+id/four"
                    android:layout_width="95dip"
                    android:layout_height="85dip"
                    android:layout_margin="4dip"
                    android:width="50dip"
                    android:background="@drawable/button_white"
                    android:fontFamily="@font/roboto_mono"
                    android:minWidth="100dp"
                    android:onClick="num4"
                    android:text="4"
                    android:textSize="24sp"
                    app:layout_column="0"
                    app:layout_row="2" />

                <Button
                    android:id="@+id/one"
                    android:layout_width="95dip"
                    android:layout_height="85dip"
                    android:layout_margin="4dip"
                    android:width="50dip"
                    android:background="@drawable/button_white"
                    android:fontFamily="@font/roboto_mono"
                    android:minWidth="100dp"
                    android:onClick="num1"
                    android:text="1"
                    android:textSize="24sp"
                    app:layout_column="0"
                    app:layout_row="3" />

                <Button
                    android:id="@+id/porcent"
                    android:layout_width="95dip"
                    android:layout_height="85dip"
                    android:layout_margin="4dip"
                    android:width="50dip"
                    android:background="@drawable/button_white"
                    android:fontFamily="@font/roboto_mono"
                    android:minWidth="100dp"
                    android:onClick="signPorcent"
                    android:text="%"
                    android:textSize="24sp"
                    app:layout_column="0"
                    app:layout_row="4" />

                <Button
                    android:id="@+id/divide"
                    android:layout_width="95dip"
                    android:layout_height="85dip"
                    android:layout_margin="4dip"
                    android:width="50dip"
                    android:background="@drawable/button_blue"
                    android:fontFamily="@font/roboto_mono"
                    android:minWidth="100dp"
                    android:onClick="signDivide"
                    android:text="/"
                    android:textColor="@color/colorWhite"
                    android:textSize="24sp"
                    app:layout_column="1"
                    app:layout_row="0" />

                <Button
                    android:id="@+id/multiply"
                    android:layout_width="95dip"
                    android:layout_height="85dip"
                    android:layout_margin="4dip"
                    android:width="50dip"
                    android:background="@drawable/button_blue"
                    android:fontFamily="@font/roboto_mono"
                    android:minWidth="100dp"
                    android:onClick="signMulti"
                    android:text="*"
                    android:textColor="@color/colorWhite"
                    android:textSize="24sp"
                    app:layout_column="2"
                    app:layout_row="0" />

                <Button
                    android:id="@+id/eight"
                    android:layout_width="95dip"
                    android:layout_height="85dip"
                    android:layout_margin="4dip"
                    android:width="50dip"
                    android:background="@drawable/button_white"
                    android:fontFamily="@font/roboto_mono"
                    android:minWidth="100dp"
                    android:onClick="num8"
                    android:text="8"
                    android:textSize="24sp"
                    app:layout_column="1"
                    app:layout_row="1" />

                <Button
                    android:id="@+id/nine"
                    android:layout_width="95dip"
                    android:layout_height="85dip"
                    android:layout_margin="4dip"
                    android:width="50dip"
                    android:background="@drawable/button_white"
                    android:fontFamily="@font/roboto_mono"
                    android:minWidth="100dp"
                    android:onClick="num9"
                    android:text="9"
                    android:textSize="24sp"
                    app:layout_column="2"
                    app:layout_row="1" />

                <Button
                    android:id="@+id/five"
                    android:layout_width="95dip"
                    android:layout_height="85dip"
                    android:layout_margin="4dip"
                    android:width="50dip"
                    android:background="@drawable/button_white"
                    android:fontFamily="@font/roboto_mono"
                    android:minWidth="100dp"
                    android:onClick="num5"
                    android:text="5"
                    android:textSize="24sp"
                    app:layout_column="1"
                    app:layout_row="2" />

                <Button
                    android:id="@+id/six"
                    android:layout_width="95dip"
                    android:layout_height="85dip"
                    android:layout_margin="4dip"
                    android:width="50dip"
                    android:background="@drawable/button_white"
                    android:fontFamily="@font/roboto_mono"
                    android:minWidth="100dp"
                    android:onClick="num6"
                    android:text="6"
                    android:textSize="24sp"
                    app:layout_column="2"
                    app:layout_row="2" />

                <Button
                    android:id="@+id/two"
                    android:layout_width="95dip"
                    android:layout_height="85dip"
                    android:layout_margin="4dip"
                    android:width="50dip"
                    android:background="@drawable/button_white"
                    android:fontFamily="@font/roboto_mono"
                    android:minWidth="100dp"
                    android:onClick="num2"
                    android:text="2"
                    android:textSize="24sp"
                    app:layout_column="1"
                    app:layout_row="3" />

                <Button
                    android:id="@+id/three"
                    android:layout_width="95dip"
                    android:layout_height="85dip"
                    android:layout_margin="4dip"
                    android:width="50dip"
                    android:background="@drawable/button_white"
                    android:fontFamily="@font/roboto_mono"
                    android:minWidth="100dp"
                    android:onClick="num3"
                    android:text="3"
                    android:textSize="24sp"
                    app:layout_column="2"
                    app:layout_row="3" />

                <Button
                    android:id="@+id/zero"
                    android:layout_width="95dip"
                    android:layout_height="85dip"
                    android:layout_margin="4dip"
                    android:width="50dip"
                    android:background="@drawable/button_white"
                    android:fontFamily="@font/roboto_mono"
                    android:minWidth="100dp"
                    android:onClick="num0"
                    android:text="0"
                    android:textSize="24sp"
                    app:layout_column="1"
                    app:layout_row="4" />

                <Button
                    android:id="@+id/btnPoint"
                    android:layout_width="95dip"
                    android:layout_height="85dip"
                    android:layout_margin="4dip"
                    android:width="50dip"
                    android:background="@drawable/button_white"
                    android:fontFamily="@font/roboto_mono"
                    android:minWidth="100dp"
                    android:onClick="signPoint"
                    android:text="."
                    android:textSize="24sp"
                    app:layout_column="2"
                    app:layout_row="4" />
            </androidx.gridlayout.widget.GridLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/drop"
                    android:layout_width="95dip"
                    android:layout_height="85dip"
                    android:layout_margin="4dip"
                    android:width="50dip"
                    android:background="@drawable/button_grey"
                    android:drawableBottom="@drawable/ic_backspace"
                    android:fontFamily="@font/roboto_mono"
                    android:gravity="center|center_horizontal"
                    android:maxHeight="100dip"
                    android:minWidth="100dip"
                    android:onClick="dropCharacter"
                    android:paddingBottom="25dip"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/subtraction"
                    android:layout_width="95dip"
                    android:layout_height="85dip"
                    android:layout_margin="4dip"
                    android:width="50dip"
                    android:background="@drawable/button_blue"
                    android:fontFamily="@font/roboto_mono"
                    android:minWidth="100dp"
                    android:onClick="signSubtraction"
                    android:text="-"
                    android:textColor="@color/colorWhite"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/sum"
                    android:layout_width="95dip"
                    android:layout_height="85dip"
                    android:layout_margin="4dip"
                    android:width="50dip"
                    android:background="@drawable/button_blue"
                    android:fontFamily="@font/roboto_mono"
                    android:minWidth="100dp"
                    android:onClick="signSum"
                    android:text="+"
                    android:textColor="@color/colorWhite"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/equal"
                    android:layout_width="95dip"
                    android:layout_height="174dp"
                    android:layout_margin="4dip"
                    android:width="50dip"
                    android:background="@drawable/button_purple"
                    android:fontFamily="@font/roboto_mono"
                    android:minWidth="100dp"
                    android:onClick="signEqual"
                    android:text="="
                    android:textColor="@color/colorWhite"
                    android:textSize="24sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>